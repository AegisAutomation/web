{
    "name": "vendor/backup-automation",
    "description": "Self-hosted backup automation platform for managing VM backups via SSH.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "AegisAutomation",
            "email": "contact@aegis.lumagrid.org"
        }
    ],
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6",
        "ext-pdo": "*",
        "ext-openssl": "*",
        "symfony/process": "^6.3",
        "phpseclib/phpseclib": "^3.0" 
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan migrate || true"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
